doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;')
      meta(name='description', content=locals.description)
      title=page.title
      link(rel='stylesheet', href='/css/reset.css')
      link(rel='stylesheet', media='screen and (min-device-width: 481px)', href='/css/style.css')
      link(rel='stylesheet', media='only screen and (max-device-width: 480px)', href='/css/mobile.css')
      script(type='text/javascript', src='http://use.typekit.com/qim7ujl.js')
      script.
        try{Typekit.load();}catch(e){}
        // if IE
        script(src=locals.url + '/js/html5.js')

  body
    block body
      section#container
        p Nothing to see here, move along.

        footer
          a(href='/')
            img.separator(src='/img/separator.png')
